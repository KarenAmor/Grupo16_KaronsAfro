<%- include ('./partials/doctype') %>

    <%- include ('./partials/head') %>
    <link rel="stylesheet" href="/css/stylesnavegacion.css">

        <body class="body">
            <%- include ('./partials/header') %>
                <main>                    
                    <section>
                        <h3 class="accesorios">ACCESORIOS</h3>
                        <div class="producto">
                            <% accessories.forEach(product => { %>
                             <article class="articulo">
                                    <img class="imagen"
                                        src="/images/products/<%= product.image %>"
                                        width="300px" height="250px" alt="<%= product.name %>">
                                    <div class="d-producto">
                                        <h3 class="titulo"><%= product.name %></h3>
                                        <p class="datos">Precio: $<%= toThousand(product.price) %></p>
                                        <p class="datos">Referencia: <%= product.reference %></p>
                                        <p class="datos">Cantidad: 1 <a class="datos" href="#"></a> <i
                                                class="fas fa-plus"></i></a></p>
                                        <p class="datos">Añadir carrito <a class="datos" href="/carrito"><i
                                                    class="fas fa-cart-arrow-down"></i> </a></i></p>
                                    </div>
                                    <div class="d2-producto">
                                        <h2>Descripción:</h2>
                                        <p class="descripcion"><%= product.description %></p>
                                    </div>
                                </article>
                            <% }) %>                            
                        </div>                        
                    </section>
                </main>
                <%- include ('./partials/footer') %>
        </body>

        </html>