<%- include ('./partials/doctype') %>

    <%- include ('./partials/head') %>
    <link rel="stylesheet" href="/css/styles-administrador.css">

        <body>
            <%- include ('./partials/header') %>

                <main class="admin">
                    <h2>Administrar Productos</h4>
                        <article class="agregar-producto">
                            <a href="/administrador/addProduct"><i class="fas fa-plus-circle"></i>Agregar</a>
                        </article>
                        <article class="table-1">
                            <table class="table-2">
                                <thead>
                                    <tr>
                                        <th scope="col">Id</th>
                                        <th scope="col">Nombre</th>
                                        <th scope="col">Ver</th>
                                        <th scope="col">Editar</th>
                                        <th scope="col">Borrar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% productos.forEach(items => { %>
                                     <tr class="primer-item">
                                        <td><%= items.id %> </td>
                                        <td><%= items.name %> </td>
                                        <td><a href="/producto/detail/<%= items.id %>" class="icon-eye"><i class="far fa-eye"></i></a></td>
                                        <td><a href="/administrador/editProduct/<%= items.id %>" class="icon-pencil"><i
                                                    class="fas fa-pencil-alt"></i></a></td>
                                        <td><form action="/administrador/delete/<%= items.id %>?_method=DELETE" method="POST">
                                            <button type="submit"><i class="fas fa-trash-alt"></i></button>
                                        </form></td>
                                    </tr>
                                    <% }) %>                                    
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </article>
                </main>

                <%- include ('./partials/footer') %>
        </body>

        </html>