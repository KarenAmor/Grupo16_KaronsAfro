<%- include ('./partials/doctype') %>

    <%- include ('./partials/head') %>
        <link rel="stylesheet" href="/css/stylesLogin.css">

        <body class="body">
            <%- include ('./partials/header') %>
                <main class="body">
                    <h3> INICIA SESION </h3>
                    <div class="errores">
                        <ul>
            
                        </ul>
                    </div>
                    <div class="wrap">
                        <form action="/login" method="POST" class="login"><b>
                                <div class="correo">
                                    <label for="email" >Correo Electrónico</label>
                                    <input type="text" id="email" name="email"
                                        class="<%= locals.errors && errors.email ? 'is-invalid' : null %>">
                                    <% if (locals.errors && errors.email) { %>
                                        <div class="text-danger" style="font-size: 15px;">
                                            <%= errors.email.msg %>
                                        </div>
                                        <% } %>
                                </div>
                                <div class="contraseña">
                                    <label for="password" >Contraseña</label>
                                    <input type="password" id="password" name="password"
                                        class="<%= locals.errors && errors.password ? 'is-invalid' : null %>">
                                    <% if (locals.errors && errors.password) { %>
                                        <div class="text-danger" style="font-size: 15px;">
                                            <%= errors.password.msg %>
                                        </div>
                                        <% } else if(typeof errors !='undefined' ){ %>
                                            <div class="text-danger" style="font-size: 15px;">
                                                <%= errors.msg %>
                                            </div>
                                            <% } %>
                                </div>
                                <button class="boton" type="submit"><b class="boton">Ingresar</b></button>
                                <div class="oContraseña">
                                    <a class="oContraseña" href="#">Olvidaste tu contraseña?</a>
                                </div>
                            </b>
                            <div>
                                <button type="button" class="boton"><a href="/register" class="boton"><b>Crear Cuenta</b></a></button>
                            </div>
                        </form>
                        <div class="desktop">
                            <p>"Sonrisa de luna creciente,
                                Mujer guerrera,
                                Negra infinita rodeada de hermosas flores."
                            </p>
                        </div>
                    </div>                    
                </main>
                <%- include ('./partials/footer') %>
        </body>
        <script src="/js/login.js"></script>

        </html>