<%- include ('./partials/doctype') %>

    <%- include ('./partials/head') %>
        <link rel="stylesheet" href="/css/stylesnavegacion.css">

        <body class="body">
            <%- include ('./partials/header') %>
                <main>
                    <%- include('./partials/greetingsUser') %>
                        <section>
                            <h3 class="accesorios">Resultado de Búsqueda de "<%= productToFind %>":</h3>
                            <div class="producto">
                                <% if (products!=false) { %>
                                 <% products.forEach(product=> { %>
                                    <article class="articulo">
                                        <img class="imagen" src="/images/products/<%= product.image %>" width="300px"
                                            height="250px" alt="<%= product.name %>">
                                        <div class="d-producto">
                                            <h3 class="titulo">
                                                <%= product.name %>
                                            </h3>
                                            <p class="datos">Precio: $<%= toThousand(product.price) %>
                                            </p>
                                            <p class="datos">Referencia: <%= product.reference %>
                                            </p>
                                            <p class="datos">Cantidad: 1 <a class="datos" href="#"></a> <i
                                                    class="fas fa-plus"></i></a></p>
                                            <p class="datos">Añadir carrito <a class="datos" href="/carrito"><i
                                                        class="fas fa-cart-arrow-down"></i> </a></i></p>
                                        </div>
                                        <div class="d2-producto">
                                            <h2>Descripción:</h2>
                                            <p class="descripcion">
                                                <%= product.description %>
                                            </p>
                                        </div>
                                    </article>
                                    <% }) %>
                                <% }else{ %>
                                    <br>
                                    <h1 class="not-found" style="height: 100vh;">No se encontró ningún producto relacionado a la búsqueda.</h1>
                                <% } %> 
                            </div>
                        </section>
                </main>
                <%- include ('./partials/footer') %>
        </body>

        </html>